            <!-- START: About your org type -->
            <div id="changed-name-hint" class="govuk-label govuk-!-font-weight-bold govuk-!-font-size-24 govuk-!-margin-top-7 govuk-!-margin-bottom-5">Your organisation type</div>
            <div class="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="select-department" name="select-department-alb" type="radio" value="yes">
                    <label class="govuk-label govuk-radios__label" for="select-department">a department</label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="select-alb" name="select-department-alb" type="radio" value="no">
                    <label class="govuk-label govuk-radios__label" for="select-alb">an arm's length body (ALB)</label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="select-alb" name="select-department-alb" type="radio" value="no">
                    <label class="govuk-label govuk-radios__label" for="select-alb">a local authority</label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="select-alb" name="select-department-alb" type="radio" value="no">
                    <label class="govuk-label govuk-radios__label" for="select-alb">an NHS organisation</label>
                </div>
            </div>
            <!-- END: About your org type -->

            <!-- START: Organisation auto suggest -->
            <label class="govuk-label govuk-!-font-weight-bold govuk-!-font-size-24 govuk-!-margin-top-7" for="award-name">Your organisation name</label>
            <input class="govuk-input" id="award-name" name="award-ref-details-1" type="email">
            <!-- END: Organisation auto suggest -->

            <!-- START: Job title -->
            <label class="govuk-label govuk-!-font-weight-bold govuk-!-font-size-24 govuk-!-margin-top-5" for="award-name">Job title</label>
            <input class="govuk-input" id="award-name" name="award-ref-details-1" type="email">
            <!-- END: Job title -->




            <div class="govuk-grid-row govuk-!-margin-top-5">
                <div class="govuk-grid-column-full">
                    <button class="govuk-button govuk-!-margin-top-5" data-module="govuk-button"
                            onclick="location.href='/v1/request-complete'" type="button">Submit access request</button>
                </div>
            </div>

        </div>



    </div>

</div>



